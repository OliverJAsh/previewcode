@import "nib"

[data-layout=display]

  aside
    position fixed
    top 0
    bottom 0
    left 0
    width 240px
    background #242424

    a
      font-size 18px
      color #FFF !important
      text-decoration none

    ul
      padding 40px
      list-style none
      margin 0

      li
        cursor pointer

  section
    position fixed
    top 0
    bottom 50px
    left 240px
    right 0px
    background #1C1C1C
    padding-left 40px
    overflow scroll

    pre
      color white
      background none !important
      border none !important
      box-shadow none !important
